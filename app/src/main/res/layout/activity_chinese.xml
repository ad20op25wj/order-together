<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChineseActivity">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <WebView
            android:id="@+id/webView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="50dp">

            <RelativeLayout
                android:id="@+id/home1"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_x="31dp"
                android:layout_y="50dp" />


        </WebView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/top_bg" />

    <Button
        android:id="@+id/btn_chinese1"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="100dp"
        android:text="공유방 찾기"
        android:onClick="btn_chinese1Clicked"
         />

    <Button
        android:id="@+id/btn_chinese2"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="200dp"
        android:text="위치 검색"
        android:onClick="btn_chinese2Clicked"
       />
        <ImageView
            android:id="@+id/btn_home"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="9dp"

            android:layout_marginTop="-30dp"

            android:src="@drawable/logo_top" />
        <Button
            android:id="@+id/btn_chinese3"

            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="300dp"
            android:text="주문 실행"
            android:onClick="btn_chinese3Clicked"
            />
        <ImageView
            android:id="@+id/chicken"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="160dp"

            android:layout_marginTop="400dp"

            android:src="@drawable/chinese"
            />

        />
    </RelativeLayout>
</LinearLayout>