<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <WebView
            android:id="@+id/webView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="50dp">

            <RelativeLayout
                android:id="@+id/home1"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_x="31dp"
                android:layout_y="50dp" />


        </WebView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/top_bg">

            <Button
                android:id="@+id/gohome"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="350dp"
                android:layout_marginTop="600dp"
                android:background="@drawable/btn_top_home"
                android:onClick="btn_godevelopmentClicked" />
        </LinearLayout>


        <Button
            android:id="@+id/btn_chinese"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/btn_menu_01_on"

            android:onClick="btn_chineseClicked" />

        <Button
            android:id="@+id/btn_chicken"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/btn_menu_02_on"

            android:onClick="btn_chickenClicked" />

        <Button
            android:id="@+id/btn_pizza"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/btn_menu_03_on"

            android:onClick="btn_pizzaClicked" />

        <Button
            android:id="@+id/btn_korean"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="450dp"
            android:background="@drawable/btn_menu_04_on"


            android:onClick="btn_koreanClicked" />

        <Button
            android:id="@+id/btn_dosirak"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="550dp"
            android:background="@drawable/btn_menu_05_on"

            android:onClick="btn_dosirakClicked" />




        <ImageView
            android:id="@+id/btn_home"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="9dp"

            android:layout_marginTop="-30dp"

            android:src="@drawable/logo_top"
           />

        <ImageView
            android:id="@+id/btn_home1"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="105dp"

            android:layout_marginTop="50dp"

            android:src="@drawable/text_main_title" />


        />

    </RelativeLayout>


</LinearLayout>